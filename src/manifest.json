{
  "manifest_version": 3,
  "name": "Script Manager",
  "version": "1.0.0",
  "description": "A simple script manager with URL observer system",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["vendors.js", "page-script.js", "main-script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.svg", "config/*.yaml"],
      "matches": ["<all_urls>"]
    }
  ]
}
